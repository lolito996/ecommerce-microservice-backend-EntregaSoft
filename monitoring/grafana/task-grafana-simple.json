{
  "family": "dev-grafana",
  "networkMode": "awsvpc", 
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "512",
  "memory": "1024",
  "executionRoleArn": "arn:aws:iam::533924338325:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::533924338325:role/ecsTaskExecutionRole",
  "containerDefinitions": [{
    "name": "grafana",
    "image": "grafana/grafana:latest",
    "portMappings": [{"containerPort": 3000, "protocol": "tcp"}],
    "environment": [
      {"name": "GF_SECURITY_ADMIN_PASSWORD", "value": "admin123"},
      {"name": "GF_USERS_ALLOW_SIGN_UP", "value": "false"},
      {"name": "GF_SERVER_DOMAIN", "value": "dev-ecommerce-alb-1748132991.us-east-1.elb.amazonaws.com"},
      {"name": "GF_SERVER_ROOT_URL", "value": "http://dev-ecommerce-alb-1748132991.us-east-1.elb.amazonaws.com/grafana/"},
      {"name": "GF_SERVER_SERVE_FROM_SUB_PATH", "value": "true"}
    ],
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-group": "/ecs/dev-grafana",
        "awslogs-region": "us-east-1",
        "awslogs-stream-prefix": "ecs"
      }
    },
    "healthCheck": {
      "command": ["CMD-SHELL", "wget -q --spider http://localhost:3000/api/health || exit 1"],
      "interval": 30,
      "timeout": 5,
      "retries": 3,
      "startPeriod": 60
    }
  }]
}
